page{
    width: 100%;height: 100%;
}
swiper{
    width: 100%;height: 100%;
}
swiper-item,.swiper-item{
    width: 100%;height: 100%;
    display: flex;justify-content: center;align-items: center;
    flex-direction: column;
}
.swiper-item-2{
    /* position: fixed;top: 0;left: 0; */
    /* width: 100%;height: 100%; */
    /* border: 1px solid red; */
    padding: 20rpx;box-sizing: border-box;
    /* overflow-y: scroll;overflow-x: scroll; */
}
.info-title{
    padding: 12rpx;box-sizing: border-box;
    font-size: 18px;color: #000;
    text-align: center;
}
.item-li{
    /* position: relative; */
    display: flex;
    box-sizing: border-box;
    width: 100%;
    padding: 10px 16px 0;
    font-size: 14px;
    line-height: 24px;
    color: #323233;
    background-color: #fff;
    flex-direction: column;
}
.btn-submit{
    width: 280rpx;height: 70rpx;margin:20rpx auto;
    border-radius: 12rpx;
    font-size: 12px;color: #fff;
    text-align: center;line-height: 70rpx;
    background: #ff9853;
}
.item-li .title{
    padding-bottom: 10px;
    position: relative;
}
.item-li .title text{
    position: absolute;left: -4px;
    color: red;
}
.item-main{
    display: flex;justify-content: flex-start;align-items: center;
    font-size: 14px;
    line-height: 24px;
    padding: 10px 16px;
}
.item-textarea{
    width: 100%;
    padding: 12rpx;box-sizing: border-box;
    border:1px solid #ccc;
    margin-bottom: 20rpx;
}
.item-textarea .textarea{
    width: 100%;min-height: 160rpx;
    padding: 12rpx;box-sizing: border-box;
}
.item-textarea .textarea.active{
    color: #969799;
}
.item-textarea textarea{
    width: 100%;min-height: 160rpx;
    padding: 12rpx;box-sizing: border-box;
}
.item-main view{
    min-width: 22%;
    padding-left: 60rpx;box-sizing: border-box;
    position: relative;
}
.item-main view::after{
    position: absolute;top: 50%;left: 4px;
    transform: translateY(-50%);
    display: flex;content: '';
    width: 30rpx;height: 30rpx;
    border-radius: 4px;
    background: url(https://6465-demo-45za6-1301766206.tcb.qcloud.la/index-img-8.png?sign=be87d467c96a7c5a10a547cc8a9fcce0&t=1585967090) center top no-repeat;
    background-size: 100% auto;
}
.item-main view.active::after{
    position: absolute;top: 50%;left: 4px;
    transform: translateY(-50%);
    display: flex;content: '';
    width: 30rpx;height: 30rpx;
    border-radius: 4px;
    background: url(https://6465-demo-45za6-1301766206.tcb.qcloud.la/index-img-8.png?sign=be87d467c96a7c5a10a547cc8a9fcce0&t=1585967090) center bottom no-repeat;
    background-size: 100% auto;
}
.img100{
    display: block;width: 100%;
}
.footber{
    position: absolute;bottom: 0;left: 0;
}
.jiantou{
    margin-top: 120rpx;
    display: block;width: 106rpx;
    animation:jiantou 3s infinite alternate; 
}
.van-popup-wrapper {
    display: flex;align-items: center;justify-content: center;height: 100%;
}
.van-popup-wrapper .wrapper{
    width: 600rpx;min-height: 400rpx;
    padding:180rpx 20rpx 20rpx;overflow: hidden;
    background:#fff;
}
.van-popup-wrapper .wrapper .title{
    position: absolute;top: 0;left: 50%;
    transform: translateX(-50%);
    width: 220rpx;height: 120rpx;text-align: center;line-height: 120rpx;
    font-size: 24px;color: #999;
}
.van-popup-wrapper .wrapper  .mobile{
    margin-bottom: 80rpx;
}
